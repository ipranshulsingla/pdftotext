#!/bin/bash

BUILD_DIR=$1
INSTALL_DIR=$BUILD_DIR/vendor
PROFILE_DIR=$BUILD_DIR/.profile.d
PACKAGE_URL="https://xpdfreader-dl.s3.amazonaws.com/xpdf-tools-linux-4.02.tar.gz"

echo ""
echo "-----> Installing"
echo ""

mkdir -p $INSTALL_DIR
cd $INSTALL_DIR
curl $PACKAGE_URL -s | tar xz
mkdir -p $INSTALL_DIR/pdftotext/bin
mv xpdf-tools-linux-4.02/bin64/pdftotext $INSTALL_DIR/pdftotext/bin
rm -rf xpdf-tools-linux-4.02

echo "-----> Creating runtime environment"
echo ""

mkdir -p $PROFILE_DIR
echo "export PATH=\"\$HOME/vendor/pdftotext/bin:\$PATH\"" >> $PROFILE_DIR/pdftotext.sh

echo "-----> Done."
echo ""
